<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Nagłówki aplikacji -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AM"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#0F0E0E"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart APP"
            android:textSize="22sp"
            android:textColor="#070606"
            android:layout_marginBottom="32dp" />

        <!-- Pole loginu (email) -->
        <EditText
            android:id="@+id/editTextLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#020101"
            android:textColor="#040202"
            android:backgroundTint="#070505"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textEmailAddress" />

        <!-- Pole hasła -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hasło"
            android:textColorHint="#090505"
            android:textColor="#0B0707"
            android:backgroundTint="#040303"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:inputType="textPassword" />

        <!-- Przycisk logowania -->
        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zaloguj się"
            android:textColor="#FFFFFF"
            android:background="#800000"
            android:layout_marginBottom="32dp" />

        <!-- Rejestracja -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nie masz konta?"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/buttonGoToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zarejestruj się"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />

    </LinearLayout>
</ScrollView>

